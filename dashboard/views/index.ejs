  <body style="padding-right: 20px; padding-left: 20px;">

<div class="col-sm-8">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title"><strong>EC2 Instances metrics (last 10 minutes)</strong></h3>
    </div>
    <br>
    <div class="col-sm-12" style="padding-right: 30px; padding-left: 30px;">
    <div class="card border-success">
        <div class="card-body">
          <h4><strong>Frontend (3 instances)</strong></h4>
          <blockquote class="card-blockquote" style="font-size: 0.9em;">
            <!-- frontendDataHTML -->
              <% frontend.forEach(function(instance) { %>
                <p><strong><%= instance.metric %></strong>: <%= instance.values %></p>
              <% }); %>
          </blockquote>
        </div>
    </div>
    </div>

    <div class="panel-body">
        <div class="col-sm-6">
        <div class="card border-success">
        <div class="card-body">
          <h4><strong>Backend (1 instance)</strong></h4>
          <blockquote class="card-blockquote" style="font-size: 0.9em;">
            <!-- backendDataHTML -->
            <% backend.forEach(function(instance) { %>
              <p><strong><%= instance.metric %></strong>: <%= instance.values %></p>
            <% }); %>
          </blockquote>
        </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="card border-success">
        <div class="card-body">
          <h4><strong>Dashboard (1 instance)</strong></h4>
          <blockquote class="card-blockquote" style="font-size: 0.9em;">
            <!-- dashboardDataHTML -->
            <% dashboard.forEach(function(instance) { %>
              <p><strong><%= instance.metric %></strong>: <%= instance.values %></p>
            <% }); %>
          </blockquote>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="col-sm-4">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title"><strong>Messages in queue (last 5 minutes)</strong></h3>
    </div>
    <div class="panel-body">
      <% queue.forEach(function(p) { %>
        <p><strong><%= p.metric %></strong>: <%= p.value %></p>
      <% }); %>
    </div>
  </div>
</div>

<div class="col-sm-4">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title"><strong>Jobs status</strong></h3>
    </div>
    <div class="panel-body">
      <% jobs.forEach(function(job) { %>
        <p><strong>ID: </strong><%= job.id %> => <strong>Status: </strong><% if (job.status == 1) { %><a style="color:green;">Done</a><% } else if (job.status == 0) { %><a style="color:red;">Pending</a><% } %></p>
      <% }); %>
    </div>
  </div>
</div>

  </body>
</html>
